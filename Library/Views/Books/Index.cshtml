@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>All Books</h1>

@if (@Model.Count == 0)
{
  <h3>No books have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Book book in Model)
    {
      <li>@Html.ActionLink($"{book.Title}", "Details", new { id = book.BookId })</li>
    }
  </ul>
}

<hr>

@using (Html.BeginForm("Search","Books")) {
<label class="mdl-textfield__label" for="sample3">Search All Books By Title:</label>
<br>
<input class="mdl-textfield__input" type="text" name="search" id="sample3"><br><br>
<input type="submit" class="button" name = "search" value="Search Books"/>
}

<hr>

<p>@Html.ActionLink("Add a new book", "Create")</p>