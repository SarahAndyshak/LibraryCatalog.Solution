@{
  Layout = "_Layout";
}

@model Library.Models.Catalog

<h2>Add a book </h2>

<h4>Add a book to this catalog: @Html.DisplayFor(model => model.Quantity)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CatalogId)

    @Html.Label("Select book")
    @Html.DropDownList("BookId")

    <input type="submit" class="button" value="Save" />
}