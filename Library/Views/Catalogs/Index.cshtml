@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>THE CATALOG</h1>

@if (@Model.Count == 0)
{
  <h3>No catalogs have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Catalog catalog in Model)
    {
      <li>@Html.ActionLink($"{catalog.Quantity}", "Details", new { id = catalog.CatalogId })</li>
    }
  </ul>
}

<hr>

<p>@Html.ActionLink("Add a catalog", "Create")</p>