@{
  Layout = "_Layout";
}

@using Library.Models
@model Library.Models.Patron

<h2>Edit this Patron</h2>

<h4>Edit this patron: @Html.DisplayFor(model => model.PatronName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.PatronId)

  @Html.LabelFor(model => model.PatronName, "Patron Name:")
  @Html.EditorFor(model => model.PatronName)

  <input type="submit" class="button" value="Save" />
}