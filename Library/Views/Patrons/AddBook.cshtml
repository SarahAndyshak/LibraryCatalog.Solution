@{
  Layout = "_Layout";
}

@model Library.Models.Patron

<h2>Add a book</h2>

<h4>Add a book to this patron: @Html.DisplayFor(model => model.PatronName)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.PatronId)

    @Html.Label("Select book")
    @Html.DropDownList("BookId")

    <input type="submit" value="Save" />
}