@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>All Authors</h1>

@if (@Model.Count == 0)
{
  <h3>No authors have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Author author in Model)
    {
      <li>@Html.ActionLink($"{author.AuthorName}", "Details", new { id = author.AuthorId })</li>
    }
  </ul>
}

<hr>

@using (Html.BeginForm("Search","Authors")) {
<label class="mdl-textfield__label" for="sample3">Search All Authors By Name:</label>
<br>
<input class="mdl-textfield__input" type="text" name="search" id="sample3"><br><br>
<input type="submit" class="button" name = "search" value="Search Authors"/>
}

<hr>

<p>@Html.ActionLink("Add a new author", "Create")</p>