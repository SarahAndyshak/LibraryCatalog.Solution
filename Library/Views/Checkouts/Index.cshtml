@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>All Checkouts</h1>

@if (@Model.Count == 0)
{
  <h3>No one has utilized checking out at the library yet.</h3>
} 
else
{
  <ul>
    @foreach (Checkout checkout in Model)
    {
      <li>@Html.ActionLink($"{checkout.History}", "Details", new { id = checkout.CheckoutId })</li>
    }
  </ul>
}

<p>@Html.ActionLink("Create a Checkout", "Create")</p>