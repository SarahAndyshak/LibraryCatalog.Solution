@{
  Layout = "_Layout";
}

@model Library.Models.Checkout

<h2>Add a book</h2>

<h4>Add a book to this checkout: @Html.DisplayFor(model => model.History)</h4>

@using (Html.BeginForm())
{
    @Html.HiddenFor(model => model.CheckoutId)

    @Html.Label("Select book")
    @Html.DropDownList("BookId")

    <input type="submit" class="button" value="Save" />
}