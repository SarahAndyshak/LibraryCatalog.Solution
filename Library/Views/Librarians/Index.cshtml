@{
  Layout = "_Layout";
}

@using Library.Models;

<h1>All Librarians</h1>

@if (@Model.Count == 0)
{
  <h3>No librarians have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Librarian librarian in Model)
    {
      <li>@Html.ActionLink($"{librarian.LibrarianName}", "Details", new { id = librarian.LibrarianId })</li>
    }
  </ul>
}

